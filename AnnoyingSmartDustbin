CODE SUBMISSION

#include <Wire.h>

#include "rgb_lcd.h"
#include "Ultrasonic.h"

//SPEAKER (PWM pin)
int speakerPin = 8;

int ledPin2 = 2;
int ledPin4 = 4;
int ledPin3 = 3;
int ledPin7 = 7;
int pinTouch = 6;

//FREQUENCIES
#define cL 129
#define cLS 139
#define dL 146
#define dLS 156
#define eL 163
#define fL 173
#define fLS 185
#define gL 194
#define gLS 207
#define aL 219
#define aLS 228
#define bL 232

#define c 261
#define cS 277
#define d 294
#define dS 311
#define e 329
#define f 349
#define fS 370
#define g 391
#define gS 415
#define a 440
#define aS 455
#define b 466

#define cH 523
#define cHS 554
#define dH 587
#define dHS 622
#define eH 659
#define fH 698
#define fHS 740
#define gH 784
#define gHS 830
#define aH 880
#define aHS 910
#define bH 933

Ultrasonic ultrasonic(5);

rgb_lcd lcd;
const int colorR = 255;
const int colorG = 255;
const int colorB = 255;

void setup()
{
  Serial.begin(9600);
  lcd.begin(16,2);
  pinMode(pinTouch, INPUT);
  pinMode(ledPin2, OUTPUT);
  pinMode(ledPin4, OUTPUT);
  pinMode(ledPin3, OUTPUT);
  pinMode(ledPin7, OUTPUT);
  pinMode(speakerPin, OUTPUT);
  lcd.setRGB(colorR, colorG, colorB);
}

void beep (int speakerPin, int freqHz, long timeMs)
{
  digitalWrite(ledPin2, HIGH);
  digitalWrite(ledPin4, HIGH);
  digitalWrite(ledPin3, HIGH);
  digitalWrite(ledPin7, HIGH);
  
  double timeDelay = (double)(1000000/freqHz);
  double timeLoop = (double)((timeMs*1000)/(timeDelay*2));
  
  for(int i = 0; i < timeLoop; i++)
  {
    digitalWrite(speakerPin, HIGH);
    delayMicroseconds(timeDelay);
    digitalWrite(speakerPin, LOW);
    delayMicroseconds(timeDelay);
  }
  
  digitalWrite(ledPin2, LOW);
  delay(20);
  
  digitalWrite(ledPin4, LOW);
  delay(20);
  
  digitalWrite(ledPin3, LOW);
  delay(20);
  
  digitalWrite(ledPin7, LOW);
  delay(20);
}

void playTone()
{
  beep(speakerPin, a, 500); 
  beep(speakerPin, a, 500);
  beep(speakerPin, a, 500);
  beep(speakerPin, f, 350);
  beep(speakerPin, cH, 150);
  
  beep(speakerPin, a, 500);
  beep(speakerPin, f, 350);
  beep(speakerPin, cH, 150);
  beep(speakerPin, a, 1000);
  beep(speakerPin, eH, 500);
  
  beep(speakerPin, eH, 500);
  beep(speakerPin, eH, 500);
  beep(speakerPin, fH, 350);
  beep(speakerPin, cH, 150);
  beep(speakerPin, gS, 500);
  
  beep(speakerPin, f, 350);
  beep(speakerPin, cH, 150);
  beep(speakerPin, a, 1000);
 
}

void loop()
{
 
  int state = digitalRead(pinTouch);
    long RangeInCentimeters;
    RangeInCentimeters = ultrasonic.MeasureInCentimeters();
    delay(150);
    lcd.clear();
    if (RangeInCentimeters >=0 && RangeInCentimeters <=3)
    {
      lcd.setCursor(0,0);
      lcd.print("Trash level:"); 
      lcd.setCursor(0,1);
      lcd.print("High");
      lcd.setRGB(255, 0, 0); 
    }
    else if ( RangeInCentimeters >=4 && RangeInCentimeters <=7 )
    {
      lcd.setCursor(0,0);
      lcd.print("Trash level:"); 
      lcd.setCursor(0,1);
      lcd.print("Medium"); 
      lcd.setRGB(255, 165, 0); 
    }
    else if ( RangeInCentimeters >=8 )
    {
      lcd.setCursor(0,0);
      lcd.print("Trash level:"); 
      lcd.setCursor(0,1);
      lcd.print("Low"); 
      lcd.setRGB(0, 255, 0); 
    }
   
   if (state == 1) {
  playTone();
   }
   else if (state == 0){
    
    digitalWrite(ledPin2, LOW);
    digitalWrite(ledPin4, LOW);
    digitalWrite(ledPin3, LOW);
    digitalWrite(ledPin7, LOW);
    digitalWrite(speakerPin, LOW);
  }
}












